<div id="headerwrap">
    <div class="container">
   
		<div class="row centered">
			<div class="col-lg-12">

				<div id="tm_main_form">
					<form action="/session/create" method="POST" name="tm_form" class="validate form-register" id="sign-up-form"> 
					    <div id="tm_embed_scroll">
						<h1>Login to TradeSafe</h1>

						<% if (flash && flash.err) { %>
						<div class="alert alert-success">
							<p> Oops, some of your inputs contain errors. Please try again.</p>
						</div>
						<% }%>

							<div class="mc-field-group">
								<input type="email" class="form-control" placeholder="Email Address" value="" name="email" class="required email" id="email">
							</div>	
							<div class="mc-field-group">
								<input type="password" class="form-control" placeholder="Password" value="" name="password" id="password">
							</div>	

							<div id="mce-responses" class="clear">
								<div class="response" id="mce-error-response" style="display:none"></div>
								<div class="response" id="mce-success-response" style="display:none"></div>
							</div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
						    <div style="position: absolute; left: -5000px;"><input type="text" name="b_869cf2991b001087bf45dd26e_897bd52a2a" tabindex="-1" value=""></div>
						    <div class="clear">
						    	<input type="submit" value="Login" name="subscribe" id="mc-embedded-subscribe" class="button">
						    </div>
					    </div>
					    <input type="hidden" name="_csrf" value="<%= _csrf %>"/>
					</form>
				</div>

			</div>
		</div>
	</div>
</div>